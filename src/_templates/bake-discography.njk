{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ headline }}{% endblock %}

{% block page_description %}{{ headline }} Discography {% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-md-6">
      <h1 style="margin-bottom: 20px;"> {{ title }} </h1>
        <img src="../img/{{ cover }}" class="img-fluid" alt="Photo of {{ cover }}" style="width: 80%; image-rendering: crisp-edges; margin-bottom: 20px;">
        <p style="font-size: 22px;">{{ blurb }}</p>
  </div>
    <div class="col-md-6">
    {% for song in members.songs %}
    {% if song.slug == slug %}
      <p>{{ song.songname }} - {{ song.runtime }}</p>
      <hr style="margin-top: 3px; margin-bottom: 3px; margin-left: 10px;">
    {% endif %}
    {% endfor %}
    </div>
  </div>
</article>
{% endblock %}
